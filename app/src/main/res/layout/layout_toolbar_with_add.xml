<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/color_toolbar_background"
    android:padding="@dimen/size_12">

    <ImageView
        android:id="@+id/btnAdd"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:contentDescription="settings"
        android:src="@drawable/ic_post_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/color_toolbar_tint" />

    <TextView
        android:id="@+id/toolbarTitle"
        android:layout_width="@dimen/view_size_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_16"
        android:fontFamily="@font/montserrat_bold"
        android:lineSpacingExtra="11sp"
        android:textColor="?attr/color_toolbar_title"
        android:textSize="@dimen/text_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/custom_channels_list_title" />
</androidx.constraintlayout.widget.ConstraintLayout>