<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/valueDecrease"
        android:layout_width="@dimen/view_size_24"
        android:layout_height="@dimen/view_size_24"
        tools:src="@drawable/ic_minus"
        app:layout_constraintEnd_toStartOf="@id/value"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/value"
        android:layout_width="@dimen/view_size_28"
        android:layout_height="@dimen/view_size_24"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:textSize="@dimen/text_16"
        app:layout_constraintEnd_toStartOf="@id/valueIncrease"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/valueDecrease"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="55" />

    <ImageView
        android:id="@+id/valueIncrease"
        android:layout_width="@dimen/view_size_24"
        android:layout_height="@dimen/view_size_24"
        tools:src="@drawable/ic_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/value"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>