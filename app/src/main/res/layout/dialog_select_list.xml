<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_size_318"
    android:paddingBottom="@dimen/size_22">

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_220"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginEnd="@dimen/size_18"
        android:layout_marginTop="@dimen/size_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupReceipts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnApplySelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/color_main_title"
        android:textColor="@color/gainsboro"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_22"
        android:layout_marginEnd="@dimen/size_16"
        android:fontFamily="@font/montserrat_bold"
        android:text="Ok"
        app:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollContainer" />
</androidx.constraintlayout.widget.ConstraintLayout>