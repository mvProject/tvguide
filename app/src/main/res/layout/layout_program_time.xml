<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/timeHours"
        android:layout_width="@dimen/view_size_20"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:lineSpacingExtra="5sp"
        android:gravity="center"
        android:textColor="?attr/color_program_item_tint"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/timeDelimeter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00" />

    <TextView
        android:id="@+id/timeDelimeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:text=":"
        android:textColor="?attr/color_program_item_tint"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeMinutes"
        android:layout_width="@dimen/view_size_20"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:lineSpacingExtra="5sp"
        android:gravity="center"
        android:textColor="?attr/color_program_item_tint"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/timeDelimeter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00" />
</androidx.constraintlayout.widget.ConstraintLayout>