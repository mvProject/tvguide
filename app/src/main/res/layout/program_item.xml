<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow"
    android:paddingStart="@dimen/size_8"
    android:paddingEnd="@dimen/size_8"
    android:paddingTop="@dimen/size_8">

    <TextView
        android:id="@+id/programTime"
        android:layout_width="@dimen/view_size_48"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/chocolate"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:00" />

    <TextView
        android:id="@+id/programName"
        android:layout_width="@dimen/view_size_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/darkorange"
        android:textSize="@dimen/text_14"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/programTime"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/programProgress"
        android:layout_width="@dimen/view_size_0"
        android:layout_height="@dimen/size_4"
        android:progressBackgroundTint="@color/medium_sea_green_alpha20"
        android:progressTint="@color/medium_sea_green"
        android:visibility="gone"
        android:max="30"
        android:layout_marginTop="@dimen/size_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/programName"
        app:layout_constraintTop_toBottomOf="@id/programName"
        tools:progress="15" />
</androidx.constraintlayout.widget.ConstraintLayout>